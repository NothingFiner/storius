<!DOCTYPE html>
<html>
  <head>
    <title>Storius</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Fira+Sans+Condensed:700|Rubik:300,400,700|Space+Mono&amp;subset=cyrillic" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if logged_in? %>
      <script type="text/javascript">
        window.currentUser = <%= render('api/users/user.json.jbuilder', user: current_user).html_safe %>;
      </script>
    <% end %>
    <script type="text/javascript">
      window.images = {
        storiusMono: 'https://s3.amazonaws.com/storius/storius-icon-shadow-mono.png',
        storiusTriple: 'https://s3.amazonaws.com/storius/storius-icon-triple.png',
        storiusYellow: 'https://s3.amazonaws.com/storius/storius-icon-shadow-yellow.png',
      };
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
